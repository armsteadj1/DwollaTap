<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="@drawable/background">
    <AbsoluteLayout
        android:layout_width="fill_parent"
        android:layout_height="86px"
        android:layout_gravity="center">
                <RelativeLayout
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:layout_gravity="center_horizontal">
                        <ProgressBar
                                android:id="@+id/progress"
                                android:layout_width="30px"
                                android:layout_height="30px"
                                android:visibility="invisible"/>
                        <ImageView
                                android:layout_width="218px"
                                android:src="@drawable/logo"
                                android:id="@+id/imageView1"
                                android:layout_height="86px"
                                android:layout_gravity="center_horizontal"
                                android:layout_centerInParent="true"></ImageView>
                </RelativeLayout>
        </AbsoluteLayout>
    <TextView
            android:id="@+id/error"
            android:gravity="center_vertical|center_horizontal"
            android:textColor="#8B1A1A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></TextView>
    <EditText
            android:hint="Username [Dwolla]"
            android:id="@+id/username"
            android:layout_height="wrap_content"
            android:layout_width="250px"
            android:layout_gravity="center_horizontal"></EditText>
    <EditText
            android:hint="Password [Dwolla]"
            android:id="@+id/password"
            android:layout_height="wrap_content"
            android:layout_width="250px"
            android:layout_gravity="center_horizontal"
            android:password="true"></EditText>

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="250px"
            android:layout_height="250px"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">
        <Button
                android:layout_gravity="right"
                android:text="Sign in"
                android:id="@+id/signInButton"
                android:layout_height="wrap_content"
                android:layout_width="100px"
                android:onClick="signInButtonClick"></Button>
    </LinearLayout>

</LinearLayout>
